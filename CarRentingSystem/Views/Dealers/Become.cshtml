@model BecomeDealerFormModel

@{
    ViewBag.Title = "Become Dealer";
}

<div class="col-md-4 offset-md-4 col-sm-10">
    <h2 class="heading-margin text-center mt-4">@ViewBag.Title</h2>

    <div class="row">
        <form method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Your name...">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="+359 882 528252">
                <span asp-validation-for="PhoneNumber" class="small text-danger"></span>
            </div>

            <input class="btn btn-primary mt-3" type="submit" value="Save" />
        </form>
    </div>
</div>