@model AddCarFormModel

@{
    ViewBag.Title = "Add Car";
}


<div class="col-md-4 offset-md-4 col-sm-10">
<h2 class="heading-margin text-center">@ViewBag.Title</h2>

    <div class="row">
    <form method="post">
        <div class="form-group">
            <label asp-for="Brand"></label>
            <input asp-for="Brand" class="form-control" placeholder="BMW, Mercedes, etc...">
            <span asp-validation-for="Brand" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Model"></label>
            <input asp-for="Model" class="form-control" placeholder="430d, S63, etc...">
            <span asp-validation-for="Model" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" rows="5" placeholder="Important info about the car"></textarea>
            <span asp-validation-for="Description" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ImageUrl"></label>
            <input asp-for="ImageUrl" class="form-control" placeholder="The car image URL">
            <span asp-validation-for="ImageUrl" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Year"></label>
            <input asp-for="Year" class="form-control" placeholder="@DateTime.UtcNow.Year">
            <span asp-validation-for="Year" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CategoryId"></label>
            <select asp-for="CategoryId" class="form-control">
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="CategoryId" class="small text-danger"></span>
        </div>

        <input class="btn btn-primary mt-3" type="submit" value="Save"/>
    </form>
    </div>
</div>